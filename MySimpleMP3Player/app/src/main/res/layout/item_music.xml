<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_imgShowPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/item"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_tvMusicName"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_tvMusicSinger"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/item_tvMusicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/item_imgShowPic"
        android:layout_marginLeft="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/item_tvMusicSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:text="TextView"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/item_tvMusicName"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_tvMusicName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"
        app:layout_constraintVertical_bias="0.498" />

    <TextView
        android:id="@+id/item_tvMusicDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:text="TextView"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_tvMusicName"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_tvMusicSinger"
        android:layout_marginBottom="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>